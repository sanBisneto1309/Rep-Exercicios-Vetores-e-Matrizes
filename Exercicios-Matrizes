Exercício 1:
#include <iostream>
using namespace std;

int main() {

    double numbers[16];
    double moreThan10 = 0;
    
    cout << "Digite 16 números: " << endl;
    for (int i = 0; i < 16; i++) {
        cin >> numbers[i];
    }

    for(int i = 0; i < 16; i++){
        if(numbers[i] > 10){
            moreThan10++;
        }
    }
    
    cout << "Quantidade de números maiores que 10: " << moreThan10 << endl;

  return 0;
}
